{
  "name": "one-oracle",
  "version": "1.0.0",
  "description": "Vesper oracle contracts",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'",
    "lint": "eslint --cache ./test/*",
    "lint:fix": "eslint --cache --fix ./test --ext .ts",
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "./scripts/coverage-all-chains.sh",
    "deploy": "hardhat deploy",
    "fork": "hardhat node --no-deploy",
    "pretest": "hardhat typechain",
    "test": "hardhat test",
    "test:mainnet": "cp .github/mainnet.env.properties .env && npm t -- --grep @mainnet",
    "test:arbitrum": "cp .github/arbitrum.env.properties .env && npm t -- --grep @arbitrum",
    "test:polygon": "cp .github/polygon.env.properties .env && npm t -- --grep @polygon",
    "test:avalanche": "cp .github/avalanche.env.properties .env && npm t -- --grep @avalanche",
    "test:optimism": "cp .github/optimism.env.properties .env && npm t -- --grep @optimism",
    "test:all": "./scripts/test-all-chains.sh",
    "verify": "hardhat etherscan-verify",
    "size-contract": "hardhat size-contracts",
    "prepare": "husky install",
    "release": "hardhat create-release"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@defi-wonderland/smock": "^2.3.0",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "@openzeppelin/contracts": "4.6.0",
    "@openzeppelin/contracts-v3.4.2-solc-0.7": "npm:@openzeppelin/contracts@3.4.2",
    "@prb/math": "^2.5.0",
    "@safe-global/safe-core-sdk": "3.3.2",
    "@safe-global/safe-ethers-adapters": "0.1.0-alpha.16",
    "@safe-global/safe-ethers-lib": "1.9.2",
    "@safe-global/safe-service-client": "1.5.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@umb-network/toolbox": "^5.10.0",
    "@uniswap/lib": "1.1.4",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-periphery": "^1.4.2",
    "chai": "^4.3.6",
    "chai-almost": "^1.0.1",
    "compare-versions": "^4.1.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-config-bloq": "^3.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-require-path-exists": "^1.1.9",
    "hardhat": "2.12.5",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.18",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "p-series": "^3.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solc": "0.8.17",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  }
}
